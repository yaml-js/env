{
  "compilerOptions": {
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", ],
  "exclude": ["dist", "tests", "**/node-modules"]
}
